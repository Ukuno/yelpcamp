<% include ../partials/header %>
<div class="container">
    <div class="row">
        
        <div id="form-log">
            <legend>Edit <%= camp.name%></legend>
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name = "name" value="<%= camp.name %>" />
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name = "image" value="<%= camp.image %>" />
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= camp.location %>">
                </div>
               <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name = "price" value="<%= camp.price %>" min="0" step="0.01" />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" name = "desc" > <%= camp.description %></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value = "submit" />
                </div>
            
            </form>
            <a href="/campgrounds/<%= camp._id %>">Go back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>