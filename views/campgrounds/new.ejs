<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align : center">Creat new camp</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name = "name" placeholder="Yosemite" />
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name = "image"  title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required />
                   <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name = "price" placeholder="9.99" min="0" step="0.01" />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" name = "desc" placeholder="Californiaâ€™s Sierra Nevada mountains."></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value = "submit" />
                </div>
            
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>